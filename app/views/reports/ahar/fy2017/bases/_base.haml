= simple_form_for :options, url: hud_reports_ahar_fy_2017_base_index_path() do |f|
  %h3 Queue Report
  .slab
    = f.error_notification
    .row
      .col-sm-4
        = f.input :coc_code, input_html: {value: GrdaWarehouse::Config.get(:site_coc_codes)}, hint: 'MA-500', required: true, label: 'CoC Code'
        = f.input :coc_zip_codes, input_html: {value: GrdaWarehouse::Config.get(:default_coc_zipcodes)}, required: true, label: 'CoC Zipcodes', hint: 'comma separated.  eg. 02108, 02109'
      .col-sm-4
        = f.input :oct_night, input_html: {value: '2016-10-28'.to_date}, required: true, label: 'October night'
        = f.input :jan_night, input_html: {value: '2017-01-27'.to_date}, required: true, label: 'January night'
        = f.input :apr_night, input_html: {value: '2017-04-27'.to_date}, required: true, label: 'April night'
        = f.input :jul_night, input_html: {value: '2017-07-27'.to_date}, required: true, label: 'July night'
      
      .col-sm-4
        = f.input :report_start, input_html: {value: '2016-10-01'.to_date}, required: true, as: :date_picker, label: 'Start Date'
        = f.input :report_end, input_html: {value: '2017-09-30'.to_date}, required: true, as: :date_picker, label: 'Start Date'
    .row
      .col-sm-12.margin-bottom-02
        = f.button :button, class: 'btn btn-primary pull-right' do
          %span.icon-plus
          Queue Report Run
 
  
 
 