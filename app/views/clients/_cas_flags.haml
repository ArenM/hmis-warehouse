%h3 CAS Info
.well
  = simple_form_for @client, url: client_path(@client)  do |f|
    - if can_view_hiv_status?
      = f.input :hues_eligible, as: :boolean, label: 'HUES Eligible?'
      = f.input :hiv_positive, as: :boolean, label: 'HIV Positive?'
    - if can_view_dmh_status?
      = f.input :dmh_eligible, as: :boolean, label: 'DMH Eligible?'
    = f.input :va_eligible, as: :boolean, label: 'VA Eligible?'
    = f.input :disability_verified_on, as: :boolean, label: GrdaWarehouse::Hud::Client.cas_columns[:disability_verified_on], input_html: {checked: @client.disability_verified_on.present?}
    = f.input :housing_release_status, collection: GrdaWarehouse::Hud::Client.housing_release_options, include_blank: 'Not Signed'
    = f.input :sync_with_cas, as: :boolean, label: GrdaWarehouse::Hud::Client.cas_columns[:sync_with_cas]
    = f.submit value: 'Update CAS Info', class: 'btn btn-secondary'