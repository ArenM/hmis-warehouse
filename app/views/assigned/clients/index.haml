- title = "Assigned Clients for #{@user.name}"
- content_for :title, title
%h1= title

%table.table.table-condensed
  %thead
    %tr
      %th
        Client
      %th
        Relationship
      %th
        Expires On
      %th
        Confidential?
      %th
  %tbody
    - @user_clients.each do |uc|
      - client = uc.client
      %tr
        %td
          - if @client_path
            = link_to client.name, send(@client_path, id: client.id)
          - else
            = client.name
        %td
          = uc.relationship
        %td
          = uc.end_date || 'No Expiration'
        %td
          = checkmark(uc.confidential)

