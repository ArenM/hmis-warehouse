.well
  = simple_form_for @filter, as: :filter, remote: true, url: warehouse_reports_disabilities_path, html: {method: :get, class: 'jFilter'} do |f|
    .row
      .col-sm-4
        .input-group
          = f.input :disabilities, collection: available_disabilities, input_html: { multiple: true, data: {placeholder: "Choose at least one disability type"}, class: 'select2' }, label: false
      .col-sm-4
        .input-group
          = f.input :project_types, collection: available_project_types, input_html: { multiple: true, data: {placeholder: "Choose at least one project type"}, class: 'select2' }, label: false
      .col-sm-4.text-right
        = f.button :submit, value: 'Run Report', data: { disable_with: 'running...' }