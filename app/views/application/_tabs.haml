- can_see_tabs = false
- tabs.each do |action, details|
  - if details[:permission]
    - can_see_tabs = true

- if can_see_tabs
  %ul.nav.nav-tabs
    - tabs.each do |action, details|
      - item_class = details[:item_class] || ''
      - if action == current
        - if details[:permission]
          %li.nav-item.active.active-tab{role: 'presentation'}
            %a.nav-link{href: '#'}
              = details[:title]
      - else
        - if details[:permission]
          %li.nav-item{class: item_class}
            = link_to details[:title], action, class: 'nav-link'
