- tooltip = nil unless tooltip.present?
- aria_label = nil unless 'aria_label'.present?
= form_tag(nil, method: "get") do
  .input-group
    %input.form-control{name: 'q', autofocus: true, type: :text, placeholder: @prompt, 'aria-label': aria_label, value: @query || params[:q],  data: { toggle: 'tooltip', title: tooltip } }
    %span.input-group-append
      %button.btn.btn-secondary{type: :submit} Search
