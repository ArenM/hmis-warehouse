.ho-container.rrh
  .ho-container__header
    %h3 Census
  .d-flex.text-center.justify-content-center.mt-4.mb-6
    .rrh__enrolled.chunk.pr-4.mr-4.mb-4
      %h4.title Monthly Census by Project Type
  .jMonthlyCensus


= content_for :page_js do
  :javascript
    (function($){
      var data = {
        x: 'x',
        columns: #{@report.census_by_project_type.to_json}
      };
      var chart = bb.generate({
        data: data,
        axis: {
          x: {
            type: 'category',
          }
        },
        legend: {
          position: "right"
        },
        size: {
          height: 200
        },
        bindto: ".jMonthlyCensus"
      });
    })(jQuery);