.row
	%h3.text-center Time in Program
	.col-sm-3
		%p
		%p.text-center Average Time in Program
		%h3.text-center
			= "#{@report.report['length_of_stay_totals']['average']} days"
		%hr
		%p.text-center Percent in Program Over One Year
		%h3.text-center
			- stays =  @report.report['length_of_stay_totals']['buckets'].values.sum
			- year_plus = @report.report['length_of_stay_totals']['buckets'].values.last
			- percent_year_plus = (year_plus.to_f / stays * 100).round rescue 0
			= "#{percent_year_plus}%"
	.col-sm-9
		.time-in-program-chart.jChart
			%p.jLoading Loading