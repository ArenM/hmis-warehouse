.well.overflow-scroll
  .row
    .col-sm-6
      %h3.text-center Time to Enter
      .row
        .col-sm-6
          %h4.text-center Goal
          %hr
          %p.text-center
            %strong #{pluralize(@report.timeliness_goal, 'day')} or less
        .col-sm-6
          %h4.text-center
            - if @report.report_type == :project_group
              Projects
            - else
              This Project
          %hr
          %ul.list-unstyled.text-center
            = @report.describe_completeness :describe_time_to_enter
        .time-to-enter-chart.jChart
          %p.jLoading Loading
    .col-sm-6
      %h3.text-center Time to Exit
      .row
        .col-sm-6
          %h4.text-center Goal
          %hr
          %p.text-center
            %strong #{pluralize(@report.timeliness_goal, 'day')} or less
        .col-sm-6
          %h4.text-center
            - if @report.report_type == :project_group
              Projects
            - else
              This Project
          %hr
          %ul.list-unstyled.text-center
            = @report.describe_completeness :describe_time_to_exit
        .time-to-exit-chart.jChart
          %p.jLoading Loading