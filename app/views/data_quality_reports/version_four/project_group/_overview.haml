.well.overflow-scroll
  .row
    .col-sm-3
      %h4.text-center
        Enrolled Clients
      %hr
      .h1.text-center.icon-group
      %h3.text-center
        = link_to polymorphic_path(support_path, @report_keys.merge({key: 'total_clients'})), data: {loads_in_pjax_modal: true} do
          #{pluralize(@report.enrolled_client_count, 'client')}
        = " / "
        = link_to polymorphic_path(support_path, @report_keys.merge({key: 'total_households'})), data: {loads_in_pjax_modal: true} do
          #{pluralize(@report.enrolled_household_count, 'household')}
      %p.text-center were enrolled in the project during the reporting period.
    .col-sm-3
      %h4.text-center
        Active Clients
      %hr
      .h1.text-center.icon-individual
      %h3.text-center
        = link_to polymorphic_path(support_path, @report_keys.merge({key: 'total_active_clients'})), data: {loads_in_pjax_modal: true} do
          #{pluralize(@report.active_client_count, 'client')}
        = " / "
        = link_to polymorphic_path(support_path, @report_keys.merge({key: 'total_active_households'})), data: {loads_in_pjax_modal: true} do
          #{pluralize(@report.active_household_count, 'household')}
      %p.text-center were active in the project during the reporting period.
    .col-sm-3
      %h4.text-center
        Enterers
      %hr
      .h1.text-center.icon-enter
      %h3.text-center
        = link_to polymorphic_path(support_path, @report_keys.merge({key: 'total_enterers'})), data: {loads_in_pjax_modal: true} do
          #{pluralize(@report.entering_clients_count, 'client')}
        = " / "
        = link_to polymorphic_path(support_path, @report_keys.merge({key: 'total_entering_households'})), data: {loads_in_pjax_modal: true} do
          #{pluralize(@report.entering_households_count, 'household')}
      %p entered the project during the reporting period.
    .col-sm-3
      %h4.text-center
        Exiters
      %hr
      .h1.text-center.icon-exit
      %h3.text-center
        = link_to polymorphic_path(support_path, @report_keys.merge({key: 'total_leavers'})), data: {loads_in_pjax_modal: true} do
          #{pluralize(@report.exiting_client_count, 'client')}
        = " / "
        = link_to polymorphic_path(support_path, @report_keys.merge({key: 'total_exiting_households'})), data: {loads_in_pjax_modal: true} do
          #{pluralize(@report.exiting_household_count, 'household')}
      %p.text-center exited the project during the reporting period.