%ul.nav.nav-tabs.sub-nav-tabs
  %li.nav-item{role: :presentation}= link_to 'Patient Summary', '#summary', class: 'nav-link'
  %li.nav-item{role: :presentation}= link_to 'Cost', '#cost', class: 'nav-link'
  %li.nav-item{role: :presentation}= link_to 'Appointments', '#appointments-list', class: 'nav-link'
  %li.nav-item{role: :presentation}= link_to 'Problems', '#problems-list', class: 'nav-link'
  %li.nav-item{role: :presentation}= link_to 'Medications', '#medications-list', class: 'nav-link'

- content_for :page_js do
  :javascript
    var tabs = document.querySelector('.sub-nav-tabs')
    new App.Affix({
      element: tabs,
      offset: tabs.offsetTop,
      elementToPad: tabs.parentElement.nextElementSibling
    })
