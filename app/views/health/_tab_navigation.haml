:ruby
  tabs = {
    client_health_careplan_path(@client) => {
      title: 'Overview',
      permission: can_edit_client_health?,
    },
    client_health_careplan_team_members_path(@client) => {
      title: 'Team Members',
      permission: can_edit_client_health?,
    },
  }
%ul.nav.nav-tabs.margin-bottom-01
  - tabs.each do |action, details|
    - if action == current
      - if details[:permission]
        %li.active.active-tab{role: 'presentation'}
          %a{href: '#'} 
            = details[:title]
    - else
      - if details[:permission]
        %li= link_to details[:title], action
