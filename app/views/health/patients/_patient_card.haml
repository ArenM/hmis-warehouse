.c-card.clients__client-card
  .c-card__content
    .patient__demographics
      %h4.patient__name.mt-0
        = link_to patient.name, window_client_health_patient_index_path(patient.client)
      .patient__dob
        DOB:
        = patient.birthdate
    .ml-auto
      - if ! patient.engaged?
        = render 'window/health/patient/remaining_to_engage', patient: patient
    .ml-4
      = render 'window/health/patient/engagement', patient: patient
    .patient__link.ml-4
      = link_to 'View', window_client_health_patient_index_path(patient.client), class: 'btn btn-sm btn-secondary'