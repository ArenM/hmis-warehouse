- item = isolation
%div{class: flex}
  %dl.mr-4
    %dt Isolation Requested On
    %dd= item.isolation_requested_at
  %dl.mr-4
    %dt Isolation location
    %dd= item.location
  %dl.mr-4
    %dt Start Date
    %dd= item.started_on
  %dl.mr-4
    %dt Scheduled End
    %dd= item.scheduled_to_end_on
  %dl.mr-4
    %dt Actual End
    %dd= item.ended_on
- if can_edit_health_emergency_clinical?
  .d-flex
    = link_to destroy_isolation_client_he_clinical_path(client_id: @client.id, id: item.id), method: :delete, class: 'btn btn-danger btn-sm ml-auto', data: { confirm: "Really delete this #{item.title}?"} do
      %i.icon-cross
      Delete