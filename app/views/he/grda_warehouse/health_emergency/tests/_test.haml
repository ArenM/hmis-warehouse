- item = test
%div{class: flex}
  - if item.test_requested.present?
    %dl.mr-4
      %dt Testing Requested?
      %dd= item.test_requested
    %dl.mr-4
      %dt Location of Test
      %dd= item.location
  - else
    %dl.mr-4
      %dt Testing Date
      %dd= item.tested_on
    %dl.mr-4
      %dt Result
      %dd= item.result

- if can_edit_health_emergency_clinical?
  .d-flex
    = link_to destroy_test_client_he_clinical_path(client_id: @client.id, id: item.id), method: :delete, class: 'btn btn-danger ml-auto', data: { confirm: "Really delete this #{item.title}?"} do
      %i.icon-cross
      Delete