- title = 'Administrative Events'
- content_for :title, title
%h1= content_for :title
= render :partial => 'menus/admin_tabs'

.d-flex
  .ml-auto
    = link_to new_admin_administrative_event_path, class: 'btn btn-primary mb-2' do
      %span.icon-plus
      Add an Administrative Event

.table-responsive
  %table.table.table-condensed
    %thead
      %th Date
      %th Title
      %th Description
    %tbody
      - @events.each do |event|
        %tr
          %td= event.date
          %td= event.title
          %td= simple_format event.description
          %td
            = link_to action: :edit, id: event do
              %span.icon-pencil
              Edit
          %td
            = link_to admin_administrative_event_path(event),  method: :delete, data: {confirm: "Would you really like to delete this administrative event?"} do
              %span.icon-cross
              Delete

%p= paginate @events
