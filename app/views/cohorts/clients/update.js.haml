var alert_class = "#{@response.alert}";
var alert_text = "#{@response.message}";
var cohort_client_id = "#{@client.id}";
var cohort_client_updated_at = "#{@client.updated_at.to_i}";
$("[data-cohort-client-id='" + cohort_client_id + "']").data('cohort-client-updated-at', cohort_client_updated_at);

var alert = '<div class="alert alert-' + alert_class + '">' + alert_text + '</div>';
$('.utility .alert').remove();
$('.utility').append(alert);
$('.utility .alert').delay(2000).fadeOut(250);