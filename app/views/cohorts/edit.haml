- title = "Edit #{@cohort.name}"
- content_for :modal_title, title

= simple_form_for @cohort, url: cohort_path(@cohort) do |f|
  = f.input :name
  = f.input :effective_date, as: :date_picker
  = f.input :default_sort_direction, collection: {'Descending' => 'desc', 'Ascending' => 'asc'}, include_blank: false, selected: @cohort.default_sort_direction, hint: 'The cohort will be sorted by the first column'
  = f.input :user_ids, collection: User.all, selected: @cohort.user_viewable_entities.pluck(:user_id), input_html: {multiple: :multiple, class: 'select2', style: 'width: 100%;'}, label: 'Grant access to specific users', hint: 'Users specified below who also have "can edit assigned cohorts" will have access this cohort.  Any user with "can manage cohorts" or "can edit cohort clients" access can always access all cohorts.'
  .row
    .col-sm-6
      = link_to cohort_path(@cohort), method: :delete, class: 'btn btn-danger' do
        %i.icon-cross
        Delete Cohort
    .col-sm-6.text-right
      = f.submit value: 'Update Cohort', class: 'btn btn-primary'

:javascript
  $('.select2').select2();