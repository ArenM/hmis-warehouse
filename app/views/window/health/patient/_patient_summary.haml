#summary
  = render 'patient_status'
  .ho-patient__container
    .ho-patient__header
      %h3.ho-patient__name
        = @patient.client.name
      .ho-patient__details
        .row
          .col-md-6
            - @patient_summary[:details].each do |detail|
              .ho-patient__detail
                %span= "#{detail[0]}: "
                = detail[1]

          .col-md-6.text-right  
            .row
              .col-sm-6(style='white-space:nowrap')
                PREFERRED COMMUNICATION:
              .col-sm-6.text-left
                (preference)
                %br
                (phone)
                %br
                (email)

    .ho-patient__content
      %h4
        Demographics
      %table
        - @patient_summary[:demographics].each do |row|
          %tr
            - row.each do |td|
              %td
                %small= "#{td[0]}: "
                = td[1]
      .row
        .col-sm-6
          %h4 
            Allergies
        .col-sm-6
          %h4
            Advanced Directive
      .row
        .col-sm-6
          = @patient.allergy_list.presence || 'none'
        .col-sm-6
          (provided by CHA)

