= simple_form_for @release_form, url: polymorphic_path(release_forms_path_generator, client_id: @client.id), as: :form, remote: true do |f|
  
  = f.error_notification

  .col-sm-12
    = f.input :signature_on, as: :date_picker
    = f.input :file_location
    = f.input :file, as: :file 
    = f.input :supervisor_reviewed, as: :boolean
    %input{ name: 'authenticity_token', type: 'hidden', value: form_authenticity_token }

  .col-sm-12
    .text-right
      = f.button :submit, 'Save'
