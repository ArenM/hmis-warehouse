.underline-header.padding-bottom-02
  %h1= "Case Management Note for #{@patient.name}"
  - unless @note.new_record?
    %small= "Entered by #{@note.user.name}, #{@note.created_at.strftime('%b %d, %Y')}"
= simple_form_for @note, url: form_url do |f|
  .row
    .col-md-10
      - form_sections = @note.display_note_form_sections
      - form_sections.each_with_index do |section, index|
        %h4= section[:title]
        .well
          .row
            .col-md-8
              = render "fields_for_#{section[:id]}", f: f
          - if form_sections.size == (index + 1)
            .text-right
            = f.submit 'Save Case Note', class: 'btn btn-action'
        - if section[:id] == :activities
          = link_to 'Add Activity', '#', onclick: 'addActivity(event)', class: 'btn btn-primary btn-primary__reverse'

= render 'form_js'