- content_for :modal_title, 'Case Management Note'
.pull-right
  = link_to 'Edit', polymorphic_path([:edit] + sdh_case_management_note_path_generator, client_id: @client.id, id: @note.id), class: 'btn btn-primary btn-primary__reverse'
- display_note_object.each do |section|
  - title = section[:title]
  - subtitle = section[:subtitle]
  - values = section[:values]
  - if title.present?
    %h4.padding-bottom-02.underline-header= title
  - if values.present?
    .margin-bottom-04
      - if subtitle.present?
        %h5.uppercase.gray-light= subtitle
      - values.each do |item|
        .margin-bottom-01
          - label = item[:key]
          - value = item[:value]
          - text_area = item[:text_area] || false
          - other = item[:other]
          - include_br_before = item[:include_br_before] || false
          %strong= label
          - if text_area && value.present?
            = simple_format(value, {class: 'padding-left-02'}, {wrapper_tag: 'div'})
          - else
            - if include_br_before
              %br
              %span.padding-left-02= value
              %br
            - else
              %span= value
              %br
        - if other.present?
          .margin-bottom-01.padding-left-02
            %strong= other[:key]
            %span= simple_format(other[:value])
