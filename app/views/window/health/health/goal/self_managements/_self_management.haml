- goal = self_management
.well.section-expander-block.open.goal.jGoal{id: "goal-#{goal.id}", data: {goal: goal.id}}
  .row
    .col-md-8
      %h3.section-expander-block__header 
        Self Management Goal
    .col-md-4
      .section-expander-block__expander-region
        .section-expander-block__metadata.text-small
          Last Modified: 
          %strong
            = goal.updated_at.to_date
            - if goal.editor.present?
              = " by #{goal.editor&.name}"
        %a.section-expander-block__expander-arrow.open
          %i.icon-arrow-circled
  .row.section-expander-block__action-row
    .col-sm-12
      .goal-form
        = simple_form_for(goal, as: :goal, url: polymorphic_path(careplan_path_generator + [:goal], id: goal.id), remote: true) do |f|
          .row
            .col-sm-6
              = f.input :name, label: 'Goal'
              = f.input :associated_dx, label: 'Associated DX'
              = f.input :barriers
              = f.input :confidence, label: 'Confidence: on a scale of 1 to 10, how confident are you that you can meet your goal?'
            .col-sm-6
              = f.input :goal_details, as: :text, input_html: {rows: 10}

          .form-actions
            = link_to polymorphic_path(careplan_path_generator + [:goal], id: goal.id), method: :delete, class: 'btn btn-secondary' do 
              Delete Goal
            = f.button :submit, value: 'Update Goal'

    = content_for :page_js do
      :javascript
