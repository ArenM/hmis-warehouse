- content_for :modal_title, 'Participation Form'


%dl
  %dt Date of Signature
  %dd= @participation_form.signature_on

  %dt Case Manager
  %dd= @participation_form.case_manager&.name

  %dt Reviewed by Supervisor
  %dd= @participation_form.reviewed_by&.name

  - if @participation_form.file.present?
    %dt Download File
    %dd= link_to(@participation_form.file&.file&.filename, @participation_form.file&.url)

  %dt Location
  %dd= @participation_form.location