- show_health = can_edit_client_health? && @client.patient.present?
:ruby
  tabs = {
    window_client_path(@client) => {
      title: 'Basic Info & Programs',
      permission: true,
    },
    window_client_health_patient_index_path(@client) => {
      title: 'Health',
      permission: show_health,
    },
    window_client_health_careplan_path(@client) => {
      title: 'Care Plan',
      permission: show_health
    }
