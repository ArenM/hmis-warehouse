%h3= "Add Note"
= simple_form_for @note, as: :note, url: window_client_notes_path(@client) do |f|
  -# = f.input :type, label: 'Note type', collection: GrdaWarehouse::ClientNotes::Base.available_types(), label_method: :type_name
  = f.input :note, label: 'Note', input_html: {rows: 10}
  = f.input :send_notification, as: :boolean, label: 'Send notifications?'
  = f.input :recipients, collection: User.all, input_html: {multiple: true, class: :select2}
  = f.submit value: 'Add Note', class: 'btn btn-secondary'