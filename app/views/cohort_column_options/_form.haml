= f.error_notification

.row
  .col-sm-6
    .form-inputs
      = f.input :cohort_column, required: true, collection: @cohort_column_option.cohort_columns, include_blank: false, include_hidden: false
      = f.input :value, as: :text
      = f.input :weight, as: :integer, required: true
      = f.input :active, required: true, as: :boolean
                

    .form-actions
      = f.button :submit, "Submit", class: 'btn btn-primary'
