#!/usr/bin/env ruby
require 'pathname'

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../',  __FILE__)

Dir.chdir APP_ROOT do
  puts "== Installing dependencies =="
  system "gem install bundler --conservative"
  system "bundle check || bundle install --without seven_zip"

  unless File.exist?("config/database.yml")
    puts "\n== Creating config/database.yml =="
    system "cp config/database.yml.sample config/database.yml"
  end
  unless File.exist?("config/secrets.yml")
    puts "\n== Creating config/secrets.yml =="
    system "cp config/secrets.yml.sample config/secrets.yml"
  end
  unless File.exist?("config/eto_api.yml")
    puts "\n== Creating config/eto_api.yml =="
    system "cp config/api.yml.sample config/eto_api.yml"
  end

  puts "\n== Preparing database =="
  system "bin/rake db:create"
  system "bin/rake db:migrate"
  system "bin/rake db:seed"

  puts "\n== Removing old logs and tempfiles =="
  system "rm -f log/*"
  system "rm -rf tmp/cache"

  puts "\n== Restarting application server =="
  system "touch tmp/restart.txt"
end
